# Configuración del Conciliador Bancario
# Copia este archivo como .env y configura tus valores

# ===========================================
# CONFIGURACIÓN BÁSICA
# ===========================================

# ID de tu hoja de Google Sheets
SHEET_ID=TU_SHEET_ID_AQUI

# Nombre de la pestaña donde se insertarán los datos
SHEET_TAB=Movimientos_Nuevos

# ===========================================
# CREDENCIALES DE GOOGLE
# ===========================================

# Opción 1: JSON de Service Account como variable de entorno
# GOOGLE_SA_JSON={"type":"service_account","project_id":"..."}

# Opción 2: Ruta al archivo de credenciales
# GOOGLE_APPLICATION_CREDENTIALS=/ruta/a/tu/service-account.json

# ===========================================
# CONFIGURACIÓN AVANZADA
# ===========================================

# Tamaño de lote para inserciones (1-10000)
BATCH_SIZE=1000

# Habilitar cache de lecturas
ENABLE_CACHE=true

# Registrar logs de importación
LOG_IMPORTS=true

# ===========================================
# CONFIGURACIÓN DE LOGGING
# ===========================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=logs/app.log

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================

# Modo demo (sin verificación de duplicados)
DEMO_MODE=false

# Tamaño máximo de archivo en MB
MAX_FILE_SIZE=200

# ===========================================
# CONFIGURACIÓN DE RENDIMIENTO
# ===========================================

# TTL del cache en segundos
CACHE_TTL=300

# Límite de requests por minuto
RATE_LIMIT=100
